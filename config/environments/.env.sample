# Sanity API token with permissions to access projects and perform operations
SANITY_TOKEN=your_sanity_token_here

# Sanity dataset and project ID
SANITY_PROJECT_ID=your_project_id
SANITY_DATASET=production

# API version for Sanity (use latest stable)
SANITY_API_VERSION=2025-03-07

# OpenAI Configuration  
OPENAI_API_KEY=your_openai_key

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_MODEL_NAME=claude-3-7-sonnet-latest

# Server Configuration
PORT=3001
WEBSOCKET_PORT=3002

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3333,https://your-sanity-studio-domain.com

# MCP Configuration
MCP_LOG_LEVEL=info
SANITY_MCP_SERVER_PATH=path/to/your/mcp/server.js 